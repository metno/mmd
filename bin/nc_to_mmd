#!/usr/bin/python3
import argparse
import sys

from mmd_utils.nc_to_mmd import main

if __name__ == '__main__':
    parser = argparse.ArgumentParser(
        description='Extract ACDD elements and create MMD record')

    parser.add_argument('input-file',
                        type=str,
                        default=None,
                        help="Input file or OpeNDAP URL")
    parser.add_argument('output-path',
                        type=str,
                        default=None,
                        help="Output path for MMD files")
    parser.add_argument('-s','--parse-services',
                        type=bool,
                        default=True,
                        help="True or False")
    try:
        args = parser.parse_args()
    except:
        parser.print_help()
        sys.exit()

    main(input_file=args.input_file, output_path=args.output_path,
            parse_services=args.parse_services)

