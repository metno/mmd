#!/usr/bin/env python3
import sys
import getopt

from mmd_utils.checkMMD import CheckMMD

def usage():
    print('Usage: ' + sys.argv[0] + ' -i <dataset_name> [-h]')
    print('\t-h: dump this text')
    print('\t-i: check one metadata file')
    sys.exit(2)

def main(*args):
